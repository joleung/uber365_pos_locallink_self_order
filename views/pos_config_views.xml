<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_config_form_golocallink" model="ir.ui.view">
        <field name="name">pos.config.form.golocallink</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <!-- Add GoLocalLink PDQ setting after ePos Printer -->
            <xpath expr="//setting[@id='other_devices']" position="after">
                <setting string="GoLocalLink" help="Connect to PAX payment terminal via golocallink gateway">
                    <field name="golocallink_enabled"/>
                    <div class="content-group" invisible="not golocallink_enabled">
                        <div class="row">
                            <div class="col-lg-4 o_light_label">
                                <label string="Server URL" for="golocallink_url"/>
                            </div>
                            <div class="col-lg-8">
                                <field name="golocallink_url" placeholder="https://127.0.0.1:8443"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4 o_light_label">
                                <label string="Terminal ID" for="golocallink_termid"/>
                            </div>
                            <div class="col-lg-8">
                                <field name="golocallink_termid" required="golocallink_enabled" placeholder="e.g., 1240000000"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4 o_light_label">
                                <label string="Debug Mode" for="pdq_debug_mode"/>
                            </div>
                            <div class="col-lg-8">
                                <field name="pdq_debug_mode"/>
                                <div class="text-muted">
                                    <i class="fa fa-warning text-warning"/> WARNING: Logs may contain sensitive payment data. Only enable for troubleshooting.
                                </div>
                            </div>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
