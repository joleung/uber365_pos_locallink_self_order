<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_golocallink" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.golocallink</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- Add GoLocalLink settings in the Payment section -->
            <xpath expr="//setting[@id='adyen_payment_terminal_setting']" position="before">
                <setting string="GoLocalLink" help="Connect to PAX payment terminal via golocallink gateway">
                    <field name="pos_golocallink_enabled"/>
                    <div class="content-group mt16" invisible="not pos_golocallink_enabled">
                        <div class="row">
                            <label string="Server URL" for="pos_golocallink_url" class="col-lg-4 o_light_label"/>
                            <div class="col-lg-8">
                                <field name="pos_golocallink_url" placeholder="https://127.0.0.1:8443"/>
                            </div>
                        </div>
                        <div class="row">
                            <label string="Terminal ID" for="pos_golocallink_termid" class="col-lg-4 o_light_label"/>
                            <div class="col-lg-8">
                                <field name="pos_golocallink_termid" required="pos_golocallink_enabled" placeholder="e.g., 1240000000"/>
                            </div>
                        </div>
                        <div class="row">
                            <label string="Debug Mode" for="pos_pdq_debug_mode" class="col-lg-4 o_light_label"/>
                            <div class="col-lg-8">
                                <field name="pos_pdq_debug_mode"/>
                            </div>
                        </div>
                        <div class="row" invisible="not pos_pdq_debug_mode">
                            <div class="col-lg-12">
                                <div class="alert alert-warning" role="alert">
                                    <i class="fa fa-warning"/> <strong>WARNING:</strong> Debug logs may contain sensitive payment data. Only enable for troubleshooting.
                                </div>
                            </div>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
