<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend POS Payment form view to display GoLocalLink transaction metadata -->
    <record id="view_pos_payment_form_kiosk_golocallink" model="ir.ui.view">
        <field name="name">pos.payment.form.kiosk.golocallink</field>
        <field name="model">pos.payment</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount']" position="after">
                <!-- GoLocalLink Transaction Metadata Group -->
                <group string="GoLocalLink Transaction Details"
                       invisible="not transaction_id">
                    <field name="transaction_id" readonly="1" string="UTI"/>
                    <field name="pdq_card_bin" readonly="1" string="Card BIN (First 6)"/>
                    <field name="card_no" readonly="1" string="Card Last 4 Digits"/>
                    <field name="payment_method_authcode" readonly="1" string="Authorization Code"/>
                    <field name="ticket" readonly="1" widget="text" string="Receipt"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
