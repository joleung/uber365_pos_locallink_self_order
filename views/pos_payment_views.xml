<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
    Add Card BIN field to POS Payment views
    Note: Other PDQ data uses standard fields:
    - transaction_id for UTI (already in standard view)
    - card_no for last 4 digits (already in standard view)
    - payment_method_authcode for auth code (already in standard view)
    -->

    <!-- Add Card BIN to Payment Form View -->
    <record id="view_pos_payment_form_inherit_pdq" model="ir.ui.view">
        <field name="name">pos.payment.form.inherit.pdq</field>
        <field name="model">pos.payment</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='card_no']" position="after">
                <field name="pdq_card_bin" invisible="not pdq_card_bin" string="Card BIN"/>
            </xpath>
        </field>
    </record>

    <!-- Add Card BIN to POS Order payment lines tab -->
    <record id="view_pos_order_form_inherit_pdq_payments" model="ir.ui.view">
        <field name="name">pos.order.form.inherit.pdq.payments</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='payments']//field[@name='card_no']" position="after">
                <field name="pdq_card_bin" optional="hide" string="Card BIN"/>
            </xpath>
        </field>
    </record>
</odoo>
